@model List<RMovies.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
<hr />
@Html.ActionLink("Create Movie", "Create", "Movies", null, new {@class="btn btn-success" })
<hr />

@if (Model.Count() == 0)
{
    <h4>We dont have any Movie yet</h4>
}

else
{

    <table id="movies" class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Movies</th>
                <th scope="col">Genre</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@Html.ActionLink(item.name, "Details", "Movies", new { id = item.id }, null)</td>
                    <td>@item.genre</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Movies", new { id = item.id }, new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("Delete", "Delete", "Movies", new { id = item.id }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
}
@section scripts
{
    <script>
        $(document).ready(function(){
            $("#movies").DataTable();
        })
    </script>


}