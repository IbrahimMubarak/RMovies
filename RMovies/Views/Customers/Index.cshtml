@model List<RMovies.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
<hr />
@Html.ActionLink("Create Customer", "Create", null, new { @class = "btn btn-success" })
<hr />
@if (Model.Count() == 0)
{
    <h4>We dont have any Customers yet</h4>
}

else
{

    <table id="customers" class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Customers</th>
                <th scope="col">Membership Type</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@Html.ActionLink(item.name, "Details", "Customers", new { id = item.id }, null)</td>
                    <td>@item.MembershipType.name</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Customers", new { id = item.id }, new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("Delete", "Delete", "Customers", new { id = item.id }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
}
@section scripts
{
    <script>
        $(document).ready(function(){
            $("#customers").DataTable();
        })
    </script>


}